{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "principalId": {
            "type": "String",
            "metadata": {
                "description": "The principal ID of the managed DataGuard identity."
            }
        },
        "builtInRoleType": {
            "allowedValues": [
                "Reader"
            ],
            "type": "String",
            "metadata": {
                "description": "Built-in role to assign. By default, DataGuard is deployed with Reader access only."
            }
        },
        "roleNameGuid": {
            "defaultValue": "[newGuid()]",
            "type": "String",
            "metadata": {
                "description": "A new GUID used to identify the role assignment."
            }
        },
        "subscriptionList": {
            "defaultValue": [
                "replace sub id 1 here",
                "replace sub id 2 here etc."
            ],
            "type": "Array"
        }
    },
    "variables": {
        "Reader": "[concat('/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[parameters('roleNameGuid')]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', parameters('subscriptionList')[copyIndex()], variables(parameters('builtInRoleType')))]",
                "principalId": "[parameters('principalId')]"
            },
            "copy": {
                "name": "roleAssignmentCopy",
                "count": "[length(parameters('subscriptionList'))]"
            }
        }
    ]
}
