{
	"$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"identityId": {
			"type": "string",
			"metadata": {
				"description": "Specifies the name of the user-assigned managed identity."
			}
		},
		"subscriptionId": {
			"type": "string"
		}
	},
	"variables": {
		"readerRoleAssignmentId": "[guid(concat('/subscriptions/', parameters('subscriptionId'), 'reader', parameters('identityId')))]",
		"readerForSubRoleDefinitionId": "[concat('/subscriptions/', parameters('subscriptionId'), '/providers/Microsoft.Authorization/roleDefinitions/', '2a2b9908-6ea1-4ae2-8e65-a410df84e7d1')]",
		"subscriptionScope": "[concat('/subscriptions/', parameters('subscriptionId'))]"
	},
	"resources": [{
		"type": "Microsoft.Authorization/roleAssignments",
		"apiVersion": "2021-04-01-preview",
		"name": "[variables('readerRoleAssignmentId')]",
		"properties": {
			"roleDefinitionId": "[variables('readerForSubRoleDefinitionId')]",
			"principalId": "[parameters('identityId')]",
			"scope": "[variables('subscriptionScope')]",
			"principalType": "ServicePrincipal"
		}
	}]
}
