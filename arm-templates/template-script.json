{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "identity": {
      "type": "string"
    },
    "utcValue": {
      "type": "string",
      "defaultValue": "[utcNow()]"
    },
    "appName": {
      "type": "string",
      "defaultValue": "dg-app-registration"
    }
  },
  "variables": {
    "cliResourceName": "AzCLIAppRegDeploymentScript",
    "aadAppUri": "[concat('https://', parameters('appName'), 'azurewebsites.net')]",
    "aadAppRedirectUri": "[concat('https://', parameters('appName'), 'azurewebsites.net/signin-oidc')]",
    "cliArg": "[concat(parameters('appName'), ' ', variables('aadAppUri'), ' ', variables('aadAppRedirectUri'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2019-10-01-preview",
      "name": "[variables('cliResourceName')]",
      "location": "[resourceGroup().location]",
      "kind": "AzureCLI",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[parameters('identity')]": {
          }
        }
      },
      "properties": {
        "forceUpdateTag": "[parameters('utcValue')]",
        "AzCliVersion": "2.0.80",
        "timeout": "PT30M",
        "arguments": "[variables('cliArg')]",
        "primaryScriptUri": "https://raw.githubusercontent.com/symmetry-systems/azure-arm-templates/app-reg/scripts/create-app-registration.ps1",
        "cleanupPreference": "Always",
        "retentionInterval": "P1D"
      }
    }
  ]
}