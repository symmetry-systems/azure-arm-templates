{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "dg-app-registration"
    }
  },
  "variables": {
    "cliResourceName": "AzCLIAppRegDeploymentScript"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2019-10-01-preview",
      "name": "[variables('cliResourceName')]",
      "location": "[resourceGroup().location]",
      "kind": "AzureCLI",
      "properties": {
        "forceUpdateTag": "[utcNow()]",
        "AzCliVersion": "2.0.80",
        "timeout": "PT30M",
        "arguments": "[concat('-appName', ' ', parameters('appName'))]",
        "scriptContent": "
        param([string] $appName)
        Connect-AzAccount
        Connect-AzureAD
        New-AzureADApplication -DisplayName $appName
        ",
        "cleanupPreference": "Always",
        "retentionInterval": "P1D"
      }
    }
  ]
}