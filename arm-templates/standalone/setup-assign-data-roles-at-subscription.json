{
	"$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"subscriptionsToMonitor": {
			"type": "array", 
			"defaultValue": ["replace sub id 1 here", "replace sub id 2 here etc."]
		},
		"identityId": {
			"type": "string",
			"metadata": {
				"description": "Specifies the ID of the Dataguard application identity."
			}
		}
	},
	"variables": {
		"nestedIdentityOtherReaderRoleAssignmentDeployment": "[format('assign-data-roles-to-dg-app-id')]"
	},
	"resources": [
		{
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2019-10-01",
			"name": "[concat(variables('nestedIdentityOtherReaderRoleAssignmentDeployment'), '-', copyIndex())]",
			"location": "[deployment().location]",
			"properties": {
				"expressionEvaluationOptions": {
					"scope": "inner"
				},
				"mode": "Incremental",
				"parameters": {
					"identityId": {
						"value": "[parameters('identityId')]"
					},
					"subscriptionId": {
						"value": "[parameters('subscriptionsToMonitor')[copyIndex()]]"
					}
				},
				"template": {
					"$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
					"contentVersion": "1.0.0.0",
					"parameters": {
						"identityId": {
							"type": "string",
							"metadata": {
								"description": "dataguard managed identity id"
							}
						},
						"subscriptionId":{
							"type": "string"
						}
					},
					"resources": [
						{
							"type": "Microsoft.Resources/deployments",
							"apiVersion": "2019-10-01",
							"name": "enable-activity-log-at-root",
							"location": "[deployment().location]",
							"subscriptionId": "[parameters('subscriptionId')]",
							"properties": {
								"expressionEvaluationOptions": {
									"scope": "inner"
								},
								"mode": "Incremental",
								"parameters": {
									"identityId": {
										"value": "[parameters('identityId')]"
									},
									"subscriptionId": {
										"value": "[parameters('subscriptionId')]"
									}
								},
								"templateLink": {
									"uri": "https://raw.githubusercontent.com/sachintyagi22/azure-templates/individual/templates/assign-data-roles-to-sub.json",
									"contentVersion": "1.0.0.0"
								}
							}
						}
					]

				}
			},
			"copy": {
				"name": "subscriptionsToMonitorcopy",
				"count": "[length(parameters('subscriptionsToMonitor'))]"
			}
		}
	]
}